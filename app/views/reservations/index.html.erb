<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>Reservations</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active"><i class="fa fa-edit"></i> All Reservations</li>
      </ol>
      <%= render 'layouts/messages' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9">
      <div class="table-responsive">
        <% unless @reservations.blank? %>
          <table class="table table-bordered table-hover tablesorter">
            <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Customer Email</th>
                <th>Customer Phone</th>
                <th>Pick Up Location</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
              <% @reservations.each do |res| %>
                <tr>
                  <td><%= res.customer_first_name %></td>
                  <td><%= res.customer_last_name %></td>
                  <td><%= res.customer_email %></td>
                  <td><%= res.customer_phone %></td>
                  <td><%= res.pick_up_location %></td>
                  <td><%= link_to 'Edit', edit_reservation_path(res),:class => "btn btn-minier btn-primary" %>
                    <%= link_to 'Destroy', reservation_path(res), :class => "btn medium btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <%else%>
          No Reservation Found.
        <%end%>
      </div>
    </div>
  </div>
  <br/>

  <%= link_to 'New Reservation', new_reservation_path ,:class => "btn btn-minier btn-primary" %>
</div>
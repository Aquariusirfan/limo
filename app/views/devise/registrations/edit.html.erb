<div id="page-wrapper">

  <div class="row">
    <div class="col-lg-12">
      <h1>Comapny <small>Update Company Data</small></h1>
      <ol class="breadcrumb">
        <li><a href="index.html"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active"><i class="fa fa-edit"></i> Edit Company</li>
      </ol>
      <%= render 'layouts/messages' %>
    </div>
  </div><!-- /.row -->

  <div class="row">
    <div class="col-lg-12">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |u| %>
        <%= u.fields_for :company do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name,class: "form-control",placeholder: "AquaTech",autofocus: true,required: true %>
            </div>

            <div class="form-group">
              <%= u.label :email %>
              <%= u.email_field :email,class: "form-control",placeholder: "test@company.com",required: true%>
              </div>

              <div class="form-group">
                <%= f.label :phone1 %>
                <%= f.text_field :phone1,class: "form-control",placeholder: "206-504-1733"%>
                </div>
                <div class="form-group">
                  <%= f.label :phone2 %>
                  <%= f.text_field :phone2,class: "form-control",placeholder: "206-504-1733"%>
                  </div>

                  <div class="form-group">
                    <div class="checkbox">
                      <label>
                        <%= f.check_box :show_driver_price %>
                        Show Driver Price
                      </label>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label :dot_number %>
                    <%= f.text_field :dot_number,class: "form-control"%>
                    </div>

                    <div class="form-group">
                      <%= f.label :lcc_mc %>
                      <%= f.text_field :lcc_mc,class: "form-control"%>
                      </div>

                      <div class="form-group">
                        <%= f.label :license_number %>
                        <%= f.text_field :license_number,class: "form-control"%>
                        </div>

                        <div class="form-group">
                          <%= f.label :fax %>
                          <%= f.text_field :fax,class: "form-control"%>
                          </div>

                          <div class="form-group">
                            <%= f.label :website %>
                            <%= f.text_field :website,class: "form-control"%>
                            </div>

                            <div class="form-group">
                              <%= f.label :address %>
                              <%= f.text_area :address, class: "form-control", rows: "3" %>
                              </div>

                              <div class="form-group">
                                <%= f.label :time_zone %>
                                <%= f.time_zone_select :time_zone %>
                              </div>

                              <button type="submit" class="btn btn-default">Submit Button</button>
                              <%= link_to 'Back', root_path ,:class => "btn btn-default" %>
                            <%end%>
                          <%end%>

                        </div>

                      </div><!-- /.row -->

                    </div><!-- /#page-wrapper -->


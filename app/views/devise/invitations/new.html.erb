<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-edit"></i> Send Invite </li>
      </ol>
      <%= render 'layouts/messages' %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <h2>Send Invitation</h2>
      <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
        <%= devise_error_messages! %>
        <% resource.class.invite_key_fields.each do |field| -%>
          <p><%= f.label field %><br />
            <%= f.text_field field, :class=>"form-control", :placeholder=>"Email" %></p>
          <label>Select Role</label>
          <%= select_tag "role", options_for_select([ "Manager", "Driver" ], "Manager") , :class=>"form-control"%><br/>
          <%= f.hidden_field :company_id,:value=>"#{current_user.company.id}" %>
        <% end -%>
        <p><%= f.submit t("devise.invitations.new.submit_button"), :class=> "btn btn-primary" %></p>
      <% end %>
    </div>
  </div><!-- /.row -->

</div><!--
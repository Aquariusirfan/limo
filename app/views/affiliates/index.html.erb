<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>Affiliates</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active"><i class="fa fa-edit"></i> All Affiliates</li>
      </ol>
      <%= render 'layouts/messages' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9">
      <div class="table-responsive">
        <% unless @affiliates.blank? %>
          <table class="table table-bordered table-hover tablesorter">
            <thead>
              <tr>
                <th>Company</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
              <% @affiliates.each do |affiliate| %>
                <tr>
                  <td><%= link_to affiliate.company, affiliate_path(affiliate) %></td>
                  <td><%= affiliate.first_name %></td>
                  <td><%= affiliate.last_name %></td>
                  <td><%= affiliate.phone %></td>
                  <td><%= affiliate.email %></td>
                  <td><%= link_to 'Edit', edit_affiliate_path(affiliate),:class => "btn btn-minier btn-primary" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <%else%>
          No Place Found.
        <%end%>
      </div>
    </div>
  </div>
  <br/>

  <%= link_to 'New Affiliate', new_affiliate_path ,:class => "btn btn-minier btn-primary" %>
</div>
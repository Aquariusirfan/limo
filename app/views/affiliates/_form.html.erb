<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>Affiliates</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <% if @affiliate.new_record? %>
          <li class="active"><i class="fa fa-edit"></i> New Affiliate</li>
        <%else%>
          <li class="active"><i class="fa fa-edit"></i> Edit Affiliate</li>
        <%end%>
      </ol>
      <%= render 'layouts/messages' %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_for([@affiliate],:html => {:class=>"form-horizontal"}) do |f| %>
        <% if @affiliate.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@affiliate.errors.count, "error") %> prohibited this affiliate from being saved:</h2>
            <ul>
              <% @affiliate.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <label>Company*</label>
          <%= f.text_field :company, :class=> "form-control", :required=>"true" %>
        </div>

        <div class="form-group">
          <label>First Name</label>
          <%= f.text_field :first_name, :class=> "form-control" %>
        </div>

        <div class="form-group">
          <label>Last Name</label>
          <%= f.text_field :last_name, :class=> "form-control" %>
        </div>

        <div class="form-group">
          <label>Phone</label>
          <%= f.text_field :phone, :class=> "form-control" %>
        </div>

        <div class="form-group">
          <label>Email*</label>
          <%= f.text_field :email, :class=> "form-control", :required=>"true" %>
        </div>

        <div class="actions">
          <%= f.submit :class=> "btn btn-primary"%>
          <%= link_to 'Back', affiliates_path ,:class => "btn btn-minier btn-primary" %>
        </div>
      <% end %>
    </div>
  </div><!-- /.row -->

</div><!--
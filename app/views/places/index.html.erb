<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>Places</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active"><i class="fa fa-edit"></i> All Places</li>
      </ol>
      <%= render 'layouts/messages' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9">
      <div class="table-responsive">
        <% unless @places.blank? %>
          <table class="table table-bordered table-hover tablesorter">
            <thead>
              <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Place Type</th>
                <th>Address</th>
                <th>City</th>
                <th>Country</th>
                <th>State/Province</th>
                <th>Zip/Postal Code</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
              <% @places.each do |place| %>
                <tr>
                  <td><%= place.name %></td>
                  <td><%= place.code %></td>
                  <td><%= place.place_type %></td>
                  <td><%= place.address %></td>
                  <td><%= place.city %></td>
                  <td><%= place.country %></td>
                  <td><%= place.state_province %></td>
                  <td><%= place.zip_code %></td>
                  <td><%= link_to 'Edit', edit_place_path(place),:class => "btn btn-minier btn-primary" %>
                    <%= link_to 'Destroy', place_path(place), :class => "btn medium btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <%else%>
          No Place Found.
        <%end%>
      </div>
    </div>
  </div>
  <br/>

  <%= link_to 'New Place', new_place_path ,:class => "btn btn-minier btn-primary" %>
</div>
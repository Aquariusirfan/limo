<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>Services</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active"><i class="fa fa-edit"></i> All Services</li>
      </ol>
      <%= render 'layouts/messages' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9">
      <div class="table-responsive">
        <% unless @services.blank? %>
          <table class="table table-bordered table-hover tablesorter">
            <thead>
              <tr>
                <th>Name</th>
                <th>Service Type</th>
                <th>Description</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
              <% @services.each do |service| %>
                <tr>
                  <td><%= service.name %></td>
                  <td><%= service.service_type %></td>
                  <td><%= service.description %></td>
                  <td><%= link_to 'Edit', edit_service_path(service),:class => "btn btn-minier btn-primary" %>
                    <%= link_to 'Destroy', service_path(service), :class => "btn medium btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <%else%>
          No Service Found.
        <%end%>
      </div>
    </div>
  </div>
  <br/>

  <%= link_to 'New Service', new_service_path ,:class => "btn btn-minier btn-primary" %>
</div>
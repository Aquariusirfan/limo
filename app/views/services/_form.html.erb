<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>Services</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <% if @service.new_record? %>
          <li class="active"><i class="fa fa-edit"></i> New Service</li>
        <%else%>
          <li class="active"><i class="fa fa-edit"></i> Edit Service</li>
        <%end%>
      </ol>
      <%= render 'layouts/messages' %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= form_for([@service],:html => {:class=>"form-horizontal"}) do |f| %>
        <%= f.hidden_field :company_id, :value=> current_user.company.id %>
        <% if @service.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>
            <ul>
              <% @service.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, :class=> "form-control" %>
        </div>

        <div class="form-group">
          <label>Service type</label>
          <%= f.select :service_type, options_for_select([['To Airport' ,'To Airport'], ['From Airport', 'From Airport'], ['To Airport (Roundtrip)', 'To Airport (Roundtrip)'], ['From Airport (Roundtrip)', 'From Airport (Roundtrip)'], ['Point To Point', 'Point To Point'], ['Hourly', 'Hourly']]),{}, :class=>"form-control" %>
        </div>

        <div class="form-group">
          <label>Description</label>
          <%= f.text_area :description, :class=> "form-control", :rows=>"3", :placeholder=> "Enter Description" %>
        </div>


        <div class="actions">
          <%= f.submit :class=> "btn btn-primary"%>
          <%= link_to 'Back', services_path ,:class => "btn btn-minier btn-primary" %>
        </div>
      <% end %>
    </div>
  </div><!-- /.row -->

</div><!--
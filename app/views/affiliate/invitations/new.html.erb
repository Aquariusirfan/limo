<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-edit"></i> Send Invite </li>
      </ol>
      <%= render 'layouts/messages' %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <h2>Send Invitation To Affiliate</h2>
      <%= form_for resource, :as => resource_name, :url => affiliate_invitation_path, :html => {:method => :post} do |f| %>
        <%= devise_error_messages! %>
        <% resource.class.invite_key_fields.each do |field| -%>
          <p><%= f.label field %><br />
            <%= f.text_field field, :class=>"form-control", :placeholder=>"Email" %></p>
        <% end -%>
        <p><%= f.label :first_name%><br />
          <%= f.text_field :first_name, :class=>"form-control", :placeholder=>"First Name" %></p>
        <p><%= f.label :last_name %><br />
          <%= f.text_field :last_name, :class=>"form-control", :placeholder=>"Last Name" %></p>
        <p><%= f.label :phone %><br />
          <%= f.text_field :phone, :class=>"form-control", :placeholder=>"Phone" %></p>
        <input id="company_id" type="hidden" name="user[company_id]" value="<%= current_user.company.id %>"></input>
        <p><%= f.submit t("devise.invitations.new.submit_button"), :class=> "btn btn-primary" %></p>
      <% end %>
    </div>
  </div><!-- /.row -->

</div><!--
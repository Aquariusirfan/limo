<%if @users.present?%>
  <div>
    <div class="form-group">
      <%=  form_tag admin_users_path, :class => "navbar-form navbar-left",:method => :get,:remote => true do%>
        Search User here:<%= text_field_tag "search",'', :class=> "form_control", :placeholder=>"Search User ..." , :style => "width: 290px;" %>
      <% end %>
    </div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |f|%>
        <tr>
          <td><%= f.email %></td>
          <td><%= f.first_name %></td>
          <td><%= f.roles.first.name %> </td>
        </tr>
      <%end%>
    </tbody>
  </table>
<%else%>
  <h4>No user found.</h4>
<%end%>




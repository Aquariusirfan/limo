<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>Customers</h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active"><i class="fa fa-edit"></i> All Customers</li>
      </ol>
      <%= render 'layouts/messages' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9">
      <div class="table-responsive">
        <% unless @customers.blank? %>
          <table class="table table-bordered table-hover tablesorter">
            <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
               <!-- <th>Account</th> -->
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <td><%= customer.first_name %></td>
                  <td><%= customer.last_name %></td>
                  <td><%= customer.phone %></td>
                  <td><%= customer.email %></td>
                  
                  <td><%= link_to 'Edit', edit_customer_path(customer),:class => "btn btn-minier btn-primary" %>
                    <%= link_to 'Destroy', customer_path(customer), :class => "btn medium btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <%else%>
          No Customer Found.
        <%end%>
      </div>
    </div>
  </div>
  <br/>

  <%= link_to 'New Customer', new_customer_path ,:class => "btn btn-minier btn-primary" %>
</div>